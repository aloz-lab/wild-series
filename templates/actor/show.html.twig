{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    {% if app.user %}
        {{ app.user.email }}
        <a href="{{ path('app_logout') }}"> Se déconnecter</a>
    {% else %}
        <a href="{{ path('app_login') }}"> Se connecter</a>
    {% endif %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ actor.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ actor.name }}</td>
        </tr>
        </tbody>
    </table>
    <br><br>
    <strong>Séries associées à cet acteur :</strong>
    <ul>
        {% for program in actor.programs %}
            <li><a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></li>
        {% else %}
            <li>Aucune série pour cet acteur</li>
        {% endfor %}
    </ul>
    <br>
    <br>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('actor_edit', {'slug': actor.slug}) }}">Edit</a>
     <br>
        {{ include('actor/_delete_form.html.twig') }}
    {% endif %}
    <br><br>
    <a href="{{ path('actor_index') }}">Retour à la liste des acteurs</a>
{% endblock %}