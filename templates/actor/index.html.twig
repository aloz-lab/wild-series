{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Actor index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            {#<th>actions</th>#}
        </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>
                    {#<a href=" ">show</a>#}
                    <a href="{{ path('actor_show', {'id': actor.id}) }}">show</a>
                    {#<a href=" ">edit</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<a href=" ">Create new</a>#}
    <br><br>
    <a href="{{ path('program_index') }}">Retour à la liste des séries</a>
{% endblock %}