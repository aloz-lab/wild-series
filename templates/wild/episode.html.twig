{% extends 'base.html.twig' %}

{% block title %}Episode {{ episode.number }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">Série {{ program.title }} - Saison {{ season.number }}</h1>
            <h2 class="mt-0">Episode {{ episode.number }} : {{ episode.title }}</h2>
            <p><strong>Synopsis : </strong>{{ episode.synopsis }}</p>
        </div>
    </div>
    <br><br>
    <a href="{{ path('wild_season', { 'id': season.id }) }}">Revenir à la saison {{ season.number }}</a>
    <br><br>
    <a href="{{ path('wild_show', { 'slug': program.title | lower | replace({' ': '-'}) }) }}">Voir la série {{ program.title }}</a>
    <br><br>
    <a href="{{ path('wild_index') }}">Retour à la liste des séries</a>
    <br><br>
    <a href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}