{% extends 'base.html.twig' %}

{% block title %}Episode {{ episode.number }}{% endblock %}

{% block body %}
    <div class="container bg-dark">
        <div class="card bg-dark">
            <div class="card-header bg-dark text-white">
                <h4>Série {{ program.title }} - Saison {{ season.number }}</h4><a href="{{ path('wild_season', { 'id': season.id }) }}">Retour à la saison {{ season.number }}</a>
            </div>
            <div class="card-body bg-dark text-white">
                <h4 class="card-title">Episode {{ episode.number }} : {{ episode.title }}</h4>
                <p class="card-text mb-3"><strong>Synopsis : </strong>{{ episode.synopsis }}</p>
            </div>
        </div>
    </div>
    <div class="container bg-dark mt-4">
        <ul class="list-group">
            <li class="list-group-item bg-dark text-white border-0"><a href="{{ path('wild_show', { 'slug': program.title | lower | replace({' ': '-'}) }) }}">Retour à la série {{ program.title }}</a></li>
            <li class="list-group-item bg-dark text-white border-0"><a href="{{ path('wild_index') }}">Retour à la liste des séries</a></li>
        </ul>
    </div>

    <br><br>
    <a href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}