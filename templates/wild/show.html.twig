{% extends 'base.html.twig' %}

{% block title %}{{ slug }}{% endblock %}

{% block body %}
    {% if app.user %}
        {{ app.user.email }}
        <a href="{{ path('app_logout') }}"> Se déconnecter</a>
    {% else %}
        <a href="{{ path('app_login') }}"> Se connecter</a>
    {% endif %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <h2>Saisons :</h2>
            {% for season in seasons %}
                <div>
                    <a href="{{ path('wild_season', { 'id': season.id }) }}">Saison {{ season.number }}
                </div>
                <br>
            {% else %}
                Aucune saison trouvée.
            {% endfor %}
            <h2>Acteurs :</h2>
            {% for actor in actors %}
                <div>
                    <a href="{{ path('wild_actor', { 'id': actor.id }) }}">{{ actor.name }}
                </div>
                <br>
            {% else %}
                Aucun acteur trouvé.
            {% endfor %}
        </div>
    </div>
    <br><br>
    <a href="{{ path('wild_index') }}">Retour à la liste des séries</a>
    <br><br>
    <a href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}