{% extends 'base.html.twig' %}

{% block title %}Season {{ season.number }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">Saison {{ season.number }} de {{ program.title }}</h1>
            <p><strong>Description : </strong>{{ season.description }}</p>
            <h2>Liste des épisodes :</h2>
            {% for episode in episodes %}
                <div>
                    <a href="{{ path('wild_episode', { 'id': episode.id }) }}">Episode {{ episode.number }}</a> : {{ episode.title }}
                </div>
                <br>
            {% else %}
                Aucun épisode trouvé.
            {% endfor %}
        </div>
    </div>
    <br><br>
    <a href="{{ path('wild_show', { 'slug': program.title | lower | replace({' ': '-'}) }) }}">Voir la série {{ program.title }}</a>
    <br><br>
    <a href="{{ path('wild_index') }}">Retour à la liste des séries</a>
    <br><br>
    <a href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}