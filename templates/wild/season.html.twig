{% extends 'base.html.twig' %}

{% block title %}Season {{ season.number }}{% endblock %}

{% block body %}
    <div class="container bg-dark">
        <div class="card bg-dark">
            <div class="card-header bg-dark text-white">
                <h4>{{ program.title }}</h4><a href="{{ path('wild_show', { 'slug': program.title | lower | replace({' ': '-'}) }) }}">Retour à la série</a>
            </div>
            <div class="card-body bg-dark text-white">
                <h4 class="card-title">Saison {{ season.number }}</h4>
                <p class="card-text mb-4"><strong>Description : </strong>{{ season.description }}</p>
                <h4 class="mb-3">Liste des épisodes :</h4>
                {% for episode in episodes %}
                    <div>
                        <a href="{{ path('wild_episode', { 'id': episode.id }) }}">Episode {{ episode.number }}</a> : {{ episode.title }}
                    </div>
                    <br>
                {% else %}
                    Aucun épisode trouvé.
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="container bg-dark mt-4">
        <a href="{{ path('wild_index') }}">Retour à la liste des séries</a>
    </div>
    <br><br>
    <a href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}