{% extends 'base.html.twig' %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">Acteur : {{ actor.name }}</h1>
            <h2>Liste des séries :</h2>
            {% for program in programs %}
                <div>
                    <a href="{{ path('program_show', { 'slug': program.slug }) }}">{{ program.title }}</a>
                </div>
                <br>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
        </div>
    </div>
    <!--<a href="{#{{ path('wild_show', { 'slug': program.title | lower | replace({' ': '-'}) }) }}">Voir la série {{ program.title }}#}</a>-->
    <br><br>
    <a href="{{ path('wild_index') }}">Retour à la liste des séries</a>
    <br><br>
    <a href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}