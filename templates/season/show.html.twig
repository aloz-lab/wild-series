{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    {% if app.user %}
        {{ app.user.email }}
        <a href="{{ path('app_logout') }}"> Se déconnecter</a>
    {% else %}
        <a href="{{ path('app_login') }}"> Se connecter</a>
    {% endif %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <a href="{{ path('season_index') }}">Retour à la liste des saisons</a>
    <br><br>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('season_edit', {'id': season.id}) }}">edit</a>
    {{ include('season/_delete_form.html.twig') }}
    {% endif %}
    <br><br>
    <a href="{{ path('program_index') }}">Retour à la liste des séries</a>
{% endblock %}
