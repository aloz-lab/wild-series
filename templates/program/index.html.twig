{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    {% if app.user %}
        {{ app.user.email }}
        <a href="{{ path('app_logout') }}"> Se d√©connecter</a>
    {% else %}
        <a href="{{ path('app_login') }}"> Se connecter</a>
    {% endif %}

    <h1>Program index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Poster</th>
                <th>Country</th>
                <th>Year</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td>{{ program.poster }}</td>
                <td>{{ program.country }}</td>
                <td>{{ program.year }}</td>
                <td>
                    <a href="{{ path('program_show', {'slug': program.slug}) }}">Show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('program_edit', {'slug': program.slug}) }}">Edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('program_new') }}">Create new</a>
    {% endif %}
    <br><br>
    <a href="{{ path('season_index') }}">Liste des saisons</a>
    <br><br>
    <a href="{{ path('actor_index') }}">Liste des acteurs</a>
{% endblock %}
